generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserFastify {
  id        Int           @id @default(autoincrement())
  name      String
  email     String        @unique
  password  String
  avatar    String?
  role      RoleFastify   @default(USER)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  posts     PostFastify[]
}

model PostFastify {
  id        Int         @id @default(autoincrement())
  title     String
  content   String
  userId    Int
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      UserFastify @relation(fields: [userId], references: [id])
}

enum RoleFastify {
  USER
  ADMIN
}
