generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleFastify {
  USER
  ADMIN
}

model UserFastify {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  avatar    String?
  role      RoleFastify     @default(USER)  // <--- novo campo
  posts     PostFastify[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model PostFastify {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  userId    Int
  user      UserFastify     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}