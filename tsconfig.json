{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo/utilities/*": ["packages/utilities/src/*"],
      "@monorepo/services/*": ["packages/services/src/*"]
    }
  },
  "include": ["packages/**/*", "__tests__/**/*"],
  "references": [
    { "path": "packages/utilities" },
    { "path": "packages/services" },
    { "path": "packages/api" }
  ]
}
